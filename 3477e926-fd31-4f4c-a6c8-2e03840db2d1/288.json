5.07999999999998],[126.86,175.57999999999998],[105.86,175.57999999999998]]},{"text":"","box":[[126.86,165.07999999999998],[129.5,165.07999999999998],[129.5,165.07999999999998],[126.86,165.07999999999998]]},{"text":"号刑","box":[[129.5,165.07999999999998],[150.5,165.07999999999998],[150.5,175.57999999999998],[129.5,175.57999999999998]]},{"text":"事判决书","box":[[150.5,165.07999999999998],[192.437,165.07999999999998],[192.437,175.57999999999998],[150.5,175.57999999999998]]},{"text":"，","box":[[192.44,165.07999999999998],[202.94,165.07999999999998],[202.94,175.57999999999998],[192.44,175.57999999999998]]},{"text":"以及","box":[[202.16,165.07999999999998],[223.16,165.07999999999998],[223.16,175.57999999999998],[202.16,175.57999999999998]]},{"text":"聂元梓本人的上诉书的节选","box":[[223.16,165.07999999999998],[349.15999999999997,165.07999999999998],[349.15999999999997,175.57999999999998],[223.16,175.57999999999998]]},{"text":"，","box":[[349.18,165.07999999999998],[359.68,165.07999999999998],[359.68,175.57999999999998],[349.18,175.57999999999998]]},{"text":"均","box":[[358.9,165.07999999999998],[369.4,165.07999999999998],[369.4,175.57999999999998],[358.9,175.57999999999998]]},{"text":"载于《聂元梓回忆录》","box":[[61.2,182.06],[164.40449999999998,182.06],[164.40449999999998,192.56],[61.2,192.56]]},{"text":"，","box":[[162.62,182.06],[173.12,182.06],[173.12,192.56],[162.62,192.56]]},{"text":"26","box":[[171.38,176.54000000000002],[176.9,176.54000000000002],[176.9,182.06000000000003],[171.38,182.06000000000003]]},{"text":"","box":[[176.89999999999998,176.54000000000002],[182.12,176.54000000000002],[182.12,176.54000000000002],[176.89999999999998,176.54000000000002]]},{"text":"笔者在此不再抄录","box":[[182.12,182.06],[266.12,182.06],[266.12,192.56],[182.12,192.56]]},{"text":"，","box":[[266.14,182.06],[276.64,182.06],[276.64,192.56],[266.14,192.56]]},{"text":"有兴趣的读者可以查","box":[[274.84,182.06],[369.34,182.06],[369.34,192.56],[274.84,192.56]]},{"text":"阅。","box":[[61.2,199.10000000000002],[82.2,199.10000000000002],[82.2,209.60000000000002],[61.2,209.60000000000002]]},{"text":"审判者是遵循他们自己制订的法律条文来进行审判活动的吗？","box":[[82.2,216.14],[369.0600000000001,216.14],[369.0600000000001,226.64],[82.2,226.64]]},{"text":"《聂元梓回忆录》","box":[[61.2,233.18],[145.2,233.18],[145.2,243.68],[61.2,243.68]]},{"text":"中专有一节","box":[[142.1445,233.18],[194.6445,233.18],[194.6445,243.68],[142.1445,243.68]]},{"text":"“判决中的骗局”","box":[[191.589,233.18],[275.589,233.18],[275.589,243.68],[191.589,243.68]]},{"text":"，","box":[[272.56,233.18],[283.06,233.18],[283.06,243.68],[272.56,243.68]]},{"text":"27","box":[[279.94,227.66000000000003],[285.46,227.66000000000003],[285.46,233.18000000000004],[279.94,233.18000000000004]]},{"text":"","box":[[285.46,227.66000000000003],[290.74,227.66000000000003],[290.74,227.66000000000003],[285.46,227.66000000000003]]},{"text":"讲述了这个过程。","box":[[290.74,233.18],[374.74,233.18],[374.74,243.68],[290.74,243.68]]},{"text":"为方便读者","box":[[61.2,250.16000000000003],[113.7,250.16000000000003],[113.7,260.66],[61.2,260.66]]},{"text":"，","box":[[113.72,250.16000000000003],[124.22,250.16000000000003],[124.22,260.66],[113.72,260.66]]},{"text":"笔者将这一节附在下面。","box":[[124.22,250.16000000000003],[239.72,250.16000000000003],[239.72,260.66],[124.22,260.66]]},{"text":"这是一场政治审判。","box":[[82.2,267.2],[176.7,267.2],[176.7,277.7],[82.2,277.7]]},{"text":"高层所需要的","box":[[173.277,267.2],[236.277,267.2],[236.277,277.7],[173.277,277.7]]},{"text":"，","box":[[236.3,267.2],[246.8,267.2],[246.8,277.7],[236.3,277.7]]},{"text":"只不过是走个法律形式和判","box":[[243.38,267.2],[369.38,267.2],[369.38,277.7],[243.38,277.7]]},{"text":"处聂元梓","box":[[61.2,284.24],[103.2,284.24],[103.2,294.74],[61.2,294.74]]},{"text":"","box":[[103.2,284.24],[105.86,284.24],[105.86,284.24],[103.2,284.24]]},{"text":"17","box":[[105.86,284.24],[116.33,284.24],[116.33,294.74],[105.86,294.74]]},{"text":"","box":[[116.33,284.24],[118.94,284.24],[118.94,284.24],[116.33,284.24]]},{"text":"年监禁这样一个结果","box":[[118.94,284.24],[213.44,284.24],[213.44,294.74],[118.94,294.74]]},{"text":"，","box":[[213.44,284.24],[223.94,284.24],[223.94,294.74],[213.44,294.74]]},{"text":"而且","box":[[223.16,284.24],[244.16,284.24],[244.16,294.74],[223.16,294.74]]},{"text":"，","box":[[244.16,284.24],[254.66,284.24],[254.66,294.74],[244.16,294.74]]},{"text":"判决也是在法庭之外早就","box":[[253.9,284.24],[369.4,284.24],[369.4,294.74],[253.9,294.74]]},{"text":"决定了的。聂元梓《我在文革漩涡中》有一节“关于彭真同志与邓小","box":[[61.2,301.22],[369.2805,301.22],[369.2805,311.72],[61.2,311.72]]},{"text":"平同志决定对我判刑的情况”","box":[[61.2,318.26],[197.7,318.26],[197.7,328.76],[61.2,328.76]]},{"text":"，","box":[[195.38,318.26],[205.88,318.26],[205.88,328.76],[195.38,328.76]]},{"text":"28","box":[[203.48,312.74],[209,312.74],[209,318.26],[203.48,318.26]]},{"text":"","box":[[208.99999999999997,312.74],[214.28,312.74],[214.28,312.74],[208.99999999999997,312.74]]},{"text":"读者可以查阅。","box":[[214.28,318.26],[287.78,318.26],[287.78,328.76],[214.28,328.76]]},{"text":"聂元梓是抗日战争","box":[[285.4385,318.26],[369.4385,318.26],[369.4385,328.76],[285.4385,328.76]]},{"text":"时期就参加革命的干部","box":[[61.2,335.3],[166.2,335.3],[166.2,345.8],[61.2,345.8]]},{"text":"，","box":[[166.22,335.3],[176.72,335.3],[176.72,345.8],[166.22,345.8]]},{"text":"而且做过情报工作","box":[[173.3,335.3],[257.3,335.3],[257.3,345.8],[173.3,345.8]]},{"text":"，","box":[[257.32,335.3],[267.82,335.3],[267.82,345.8],[257.32,345.8]]},{"text":"一些老上级对她还是了","box":[[264.4,335.3],[369.4,335.3],[369.4,345.8],[264.4,345.8]]},{"text":"解的","box":[[61.2,352.28],[82.2,352.28],[82.2,362.78],[61.2,362.78]]},{"text":"，","box":[[82.2,352.28],[92.7,352.28],[92.7,362.78],[82.2,362.78]]},{"text":"有些情况","box":[[92.72,352.28],[134.72,352.28],[134.72,362.78],[92.72,362.78]]},{"text":"，","box":[[134.72,352.28],[145.22,352.28],[145.22,362.78],[134.72,362.78]]},{"text":"她是可以了解到的。","box":[[145.22,352.28],[239.72,352.28],[239.72,362.78],[145.22,362.78]]},{"text":"判决书中漏洞甚多","box":[[82.2,369.32],[166.2,369.32],[166.2,379.82],[82.2,379.82]]},{"text":"，","box":[[166.22,369.32],[176.72,369.32],[176.72,379.82],[166.22,379.82]]},{"text":"是经不起质证的。","box":[[175.94,369.32],[259.94,369.32],[259.94,379.82],[175.94,379.82]]},{"text":"聂元梓不接受这一判决","box":[[259.18,369.32],[364.18,369.32],[364.18,379.82],[259.18,379.82]]},{"text":"，","box":[[364.18,369.32],[374.68,369.32],[374.68,379.82],[364.18,379.82]]},{"text":"但是","box":[[61.2,386.38],[82.2,386.38],[82.2,396.88],[61.2,396.88]]},{"text":"，","box":[[82.2,386.38],[92.7,386.38],[92.7,396.88],[82.2,396.88]]},{"text":"她被剥夺了在法庭上最后陈述的权利","box":[[89.3,386.38],[257.3,386.38],[257.3,396.88],[89.3,396.88]]},{"text":"，","box":[[257.32,386.38],[267.82,386.38],[267.82,396.88],[257.32,396.88]]},{"text":"甚至被剥夺了上诉的权","box":[[264.4,386.38],[369.4,386.38],[369.4,396.88],[264.4,396.88]]},{"text":"利。","box":[[61.2,403.36],[82.2,403.36],[82.2,413.86],[61.2,413.86]]},{"text":"按照法律规定","box":[[79.92150000000001,403.36],[142.9215,403.36],[142.9215,413.86],[79.92150000000001,413.86]]},{"text":"，","box":[[142.94,403.36],[153.44,403.36],[153.44,413.86],[142.94,413.86]]},{"text":"聂元梓有十天的上诉期","box":[[151.16,403.36],[256.15999999999997,403.36],[256.15999999999997,413.86],[151.16,413.86]]},{"text":"，","box":[[256.18,403.36],[266.68,403.36],[266.68,413.86],[256.18,413.86]]},{"text":"但在十天内要写完上诉","box":[[264.4,403.36],[369.4,403.36],[369.4,413.86],[264.4,413.86]]},{"text":"材料是不可能的","box":[[61.2,420.4],[134.7,420.4],[134.7,430.9],[61.2,430.9]]},{"text":"，","box":[[134.72,420.4],[145.22,420.4],[145.22,430.9],[134.72,430.9]]},{"text":"经与法院共同商定","box":[[141.8,420.4],[225.8,420.4],[225.8,430.9],[141.8,430.9]]},{"text":"，","box":[[225.8,420.4],[236.3,420.4],[236.3,430.9],[225.8,430.9]]},{"text":"聂元梓先写了一个简单的陈述","box":[[232.88,420.4],[369.38,420.4],[369.38,430.9],[232.88,430.9]]},{"text":"交上去","box":[[61.2,437.44],[92.7,437.44],[92.7,447.94],[61.2,447.94]]},{"text":"，","box":[[92.72,437.44],[103.22,437.44],[103.22,447.94],[92.72,447.94]]},{"text":"再写上诉书补充材料。","box":[[100.94,437.44],[205.94,437.44],[205.94,447.94],[100.94,447.94]]},{"text":"但是","box":[[203.6615,437.44],[224.6615,437.44],[224.6615,447.94],[203.6615,447.94]]},{"text":"，","box":[[224.66,437.44],[235.16,437.44],[235.16,447.94],[224.66,447.94]]},{"text":"聂的上诉书补充材料还没有写","box":[[232.88,437.44],[369.38,437.44],[369.38,447.94],[232.88,447.94]]},{"text":"完","box":[[61.2,454.48],[71.7,454.48],[71.7,464.98],[61.2,464.98]]},{"text":"，","box":[[71.7,454.48],[82.2,454.48],[82.2,464.98],[71.7,464.98]]},{"text":"高级法院的终审判决书就下来了。高级法院根本没有重新审理","box":[[81.42,454.48],[364.14300000000003,454.48],[364.14300000000003,464.98],[81.42,464.98]]},{"text":"，","box":[[364.18,454.48],[374.68,454.48],[374.68,464.98],[364.18,464.98]]},{"text":"怎么就能发出终审判决书呢？聂元梓认为这样的终审判决书是非法","box":[[61.2,471.46000000000004],[368.9550000000001,471.46000000000004],[368.9550000000001,481.96000000000004],[61.2,481.96000000000004]]},{"text":"的","box":[[61.2,488.5],[71.7,488.5],[71.7,499],[61.2,499]]},{"text":"，","box":[[71.7,488.5],[82.2,488.5],[82.2,499],[71.7,499]]},{"text":"始终拒绝接受。所以","box":[[82.2,488.5],[176.7,488.5],[176.7,499],[82.2,499]]},{"text":"，","box":[[176.72,488.5],[187.22,488.5],[187.22,499],[176.72,499]]},{"text":"《聂元梓回忆录》里没有这件文书。","box":[[187.22,488.5],[355.22,488.5],[355.22,499],[187.22,499]]},{"text":"26","box":[[61.2,568.72],[67.2,568.72],[67.2,574.72],[61.2,574.72]]},{"text":"","box":[[67.2,568.72],[71.7,568.72],[71.7,568.72],[67.2,568.72]]},{"text":"聂元梓：","box":[[71.7,571.72],[107.70000000000002,571.72],[107.70000000000002,580.72],[71.7,580.72]]},{"text":"《","box":[[107.72,571.72],[116.72,571.72],[116.72,580.72],[107.72,580.72]]},{"text":"聂元梓","box":[[116.72,571.72],[143.72,571.72],[143.72,580.72],[116.72,580.72]]},{"text":"回忆录》，第","box":[[143.72,571.72],[197.72,571.72],[197.72,580.72],[143.72,580.72]]},{"text":"","box":[[197.72,571.72],[199.94,571.72],[199.94,571.72],[197.72,571.72]]},{"text":"371","box":[[199.94,571.72],[213.44,571.72],[213.44,580.72],[199.94,580.72]]},{"text":"—","box":[[213.44,571.72],[222.44,571.72],[222.44,580.72],[213.44,580.72]]},{"text":"455","box":[[222.44,571.72],[2