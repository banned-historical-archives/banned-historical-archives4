9998],[329.6615,181.57999999999998],[277.1615,181.57999999999998]]},{"text":"，","box":[[329.68,171.07999999999998],[340.18,171.07999999999998],[340.18,181.57999999999998],[329.68,181.57999999999998]]},{"text":"认为是","box":[[337.9,171.07999999999998],[369.4,171.07999999999998],[369.4,181.57999999999998],[337.9,181.57999999999998]]},{"text":"要为他澄清问题了","box":[[61.2,188.06],[145.2,188.06],[145.2,198.56],[61.2,198.56]]},{"text":"，","box":[[145.22,188.06],[155.72,188.06],[155.72,198.56],[145.22,198.56]]},{"text":"因此饭都顾不上吃","box":[[153.44,188.06],[237.44,188.06],[237.44,198.56],[153.44,198.56]]},{"text":"，","box":[[237.44,188.06],[247.94,188.06],[247.94,198.56],[237.44,198.56]]},{"text":"便欣然跟来人立即返校。","box":[[245.66,188.06],[361.15999999999997,188.06],[361.15999999999997,198.56],[245.66,198.56]]},{"text":"然","box":[[358.88149999999996,188.06],[369.38149999999996,188.06],[369.38149999999996,198.56],[358.88149999999996,198.56]]},{"text":"而他却万万没有想到回校之后却根本没有任何负责人谈话","box":[[61.2,205.10000000000002],[326.47200000000004,205.10000000000002],[326.47200000000004,215.60000000000002],[61.2,215.60000000000002]]},{"text":"，","box":[[327.04,205.10000000000002],[337.54,205.10000000000002],[337.54,215.60000000000002],[327.04,215.60000000000002]]},{"text":"而由几","box":[[337.66,205.10000000000002],[369.40000000000003,205.10000000000002],[369.40000000000003,215.60000000000002],[337.66,215.60000000000002]]},{"text":"个素不相识的人空口无凭地宣布对他实行","box":[[61.2,222.14],[250.2,222.14],[250.2,232.64],[61.2,232.64]]},{"text":"“隔离审查”","box":[[247.92149999999998,222.14],[310.9215,222.14],[310.9215,232.64],[247.92149999999998,232.64]]},{"text":"。","box":[[308.643,222.14],[319.143,222.14],[319.143,232.64],[308.643,232.64]]},{"text":"孙蓬一强烈","box":[[316.86449999999996,222.14],[369.36449999999996,222.14],[369.36449999999996,232.64],[316.86449999999996,232.64]]},{"text":"要求找校党委负责人谈话竟被置之不理","box":[[61.2,239.18],[239.7,239.18],[239.7,249.68],[61.2,249.68]]},{"text":"，","box":[[239.72,239.18],[250.22,239.18],[250.22,249.68],[239.72,249.68]]},{"text":"也不许申辩。","box":[[246.8,239.18],[309.8,239.18],[309.8,249.68],[246.8,249.68]]},{"text":"后又给校党委","box":[[306.377,239.18],[369.377,239.18],[369.377,249.68],[306.377,249.68]]},{"text":"写信并要求将信予以公布和转送中央","box":[[61.2,256.16],[229.2,256.16],[229.2,266.66],[61.2,266.66]]},{"text":"，","box":[[229.22,256.16],[239.72,256.16],[239.72,266.66],[229.22,266.66]]},{"text":"也被拒绝","box":[[236.3,256.16],[278.3,256.16],[278.3,266.66],[236.3,266.66]]},{"text":"（这时并未宣布是敌","box":[[274.877,256.16],[369.377,256.16],[369.377,266.66],[274.877,266.66]]},{"text":"我矛盾）。","box":[[61.2,273.2],[113.7,273.2],[113.7,283.7],[61.2,283.7]]},{"text":"4","box":[[113.72,273.2],[118.97,273.2],[118.97,283.7],[113.72,283.7]]},{"text":"","box":[[118.97,273.2],[121.58,273.2],[121.58,273.2],[118.97,273.2]]},{"text":"月","box":[[121.58,273.2],[132.07999999999998,273.2],[132.07999999999998,283.7],[121.58,283.7]]},{"text":"","box":[[132.07999999999998,273.2],[134.72,273.2],[134.72,273.2],[132.07999999999998,273.2]]},{"text":"8","box":[[134.72,273.2],[139.97,273.2],[139.97,283.7],[134.72,283.7]]},{"text":"","box":[[139.97,273.2],[142.64,273.2],[142.64,273.2],[139.97,273.2]]},{"text":"日突然召开全校批判大会","box":[[142.64,273.2],[258.077,273.2],[258.077,283.7],[142.64,283.7]]},{"text":"，","box":[[258.1,273.2],[268.6,273.2],[268.6,283.7],[258.1,283.7]]},{"text":"给戴上“反革命分子”","box":[[268.6,273.2],[373.6,273.2],[373.6,283.7],[268.6,283.7]]},{"text":"的帽子","box":[[61.2,290.24],[92.7,290.24],[92.7,300.74],[61.2,300.74]]},{"text":"，","box":[[92.72,290.24],[103.22,290.24],[103.22,300.74],[92.72,300.74]]},{"text":"逼其低头弯腰。","box":[[103.22,290.24],[176.72,290.24],[176.72,300.74],[103.22,300.74]]},{"text":"4","box":[[176.72,290.24],[181.97,290.24],[181.97,300.74],[176.72,300.74]]},{"text":"","box":[[181.97,290.24],[184.94,290.24],[184.94,290.24],[181.97,290.24]]},{"text":"月","box":[[184.94,290.24],[195.44,290.24],[195.44,300.74],[184.94,300.74]]},{"text":"","box":[[195.44,290.24],[198.38,290.24],[198.38,290.24],