1.5]]},{"text":"，","box":[[259.18,131],[269.68,131],[269.68,141.5],[259.18,141.5]]},{"text":"为了“","box":[[269.26,131],[300.34,131],[300.34,141.5],[269.26,141.5]]},{"text":"818","box":[[300.34,131],[316.1499999999999,131],[316.1499999999999,141.5],[300.34,141.5]]},{"text":"”她特地","box":[[316.18,131],[357.76,131],[357.76,141.5],[316.18,141.5]]},{"text":"做了","box":[[357.7,131],[378.7,131],[378.7,141.5],[357.7,141.5]]},{"text":"个葵花向阳的纸板","box":[[70.56,148.03999999999996],[154.56,148.03999999999996],[154.56,158.53999999999996],[70.56,158.53999999999996]]},{"text":"，","box":[[154.58,148.03999999999996],[165.08,148.03999999999996],[165.08,158.53999999999996],[154.58,158.53999999999996]]},{"text":"准备那天举着去天安门。","box":[[162.8,148.03999999999996],[278.3,148.03999999999996],[278.3,158.53999999999996],[162.8,158.53999999999996]]},{"text":"因为出身不好","box":[[276.0215,148.03999999999996],[339.0215,148.03999999999996],[339.0215,158.53999999999996],[276.0215,158.53999999999996]]},{"text":"，","box":[[339.04,148.03999999999996],[349.54,148.03999999999996],[349.54,158.53999999999996],[339.04,158.53999999999996]]},{"text":"班里却","box":[[347.26,148.03999999999996],[378.76,148.03999999999996],[378.76,158.53999999999996],[347.26,158.53999999999996]]},{"text":"没让她去","box":[[70.56,165.07999999999998],[112.56,165.07999999999998],[112.56,175.57999999999998],[70.56,175.57999999999998]]},{"text":"，","box":[[112.58,165.07999999999998],[123.08,165.07999999999998],[123.08,175.57999999999998],[112.58,175.57999999999998]]},{"text":"她受了伤害","box":[[123.08,165.07999999999998],[175.57999999999998,165.07999999999998],[175.57999999999998,175.57999999999998],[123.08,175.57999999999998]]},{"text":"，","box":[[175.58,165.07999999999998],[186.08,165.07999999999998],[186.08,175.57999999999998],[175.58,175.57999999999998]]},{"text":"所以许多细节记得特别牢。","box":[[186.08,165.07999999999998],[312.08000000000004,165.07999999999998],[312.08000000000004,175.57999999999998],[186.08,175.57999999999998]]},{"text":"现在回想","box":[[91.58,182.06],[133.57999999999998,182.06],[133.57999999999998,192.56],[91.58,192.56]]},{"text":"，","box":[[133.58,182.06],[144.08,182.06],[144.08,192.56],[133.58,192.56]]},{"text":"当时所以说我不配","box":[[140.66,182.06],[224.66,182.06],[224.66,192.56],[140.66,192.56]]},{"text":"，","box":[[224.66,182.06],[235.16,182.06],[235.16,192.56],[224.66,192.56]]},{"text":"是因为我们学生代表会的几人跟","box":[[231.74,182.06],[378.74,182.06],[378.74,192.56],[231.74,192.56]]},{"text":"着工作组犯了错误","box":[[70.56,199.10000000000002],[154.56,199.10000000000002],[154.56,209.60000000000002],[70.56,209.60000000000002]]},{"text":"，","box":[[154.58,199.10000000000002],[165.08,199.10000000000002],[165.08,209.60000000000002],[154.58,209.60000000000002]]},{"text":"我心里感到有些迷茫和惭愧。","box":[[165.08,199.10000000000002],[301.58000000000004,199.10000000000002],[301.58000000000004,209.60000000000002],[165.08,209.60000000000002]]},{"text":"当天下午","box":[[91.58,216.14],[133.57999999999998,216.14],[133.57999999999998,226.64],[91.58,226.64]]},{"text":"，","box":[[133.58,216.14],[144.08,216.14],[144.08,226.64],[133.58,226.64]]},{"text":"《光明日报》的一位男记者来采访我","box":[[138.32,216.14],[305.7845,216.14],[305.7845,226.64],[138.32,226.64]]},{"text":"，","box":[[305.8,216.14],[316.3,216.14],[316.3,226.64],[305.8,226.64]]},{"text":"他问毛接见我","box":[[315.76,216.14],[378.76,216.14],[378.76,226.64],[315.76,226.64]]},{"text":"的情况","box":[[70.56,233.18],[102.06,233.18],[102.06,243.68],[70.56,243.68]]},{"text":"，","box":[[102.08,233.18],[112.58,233.18],[112.58,243.68],[102.08,243.68]]},{"text":"我讲了之后","box":[[110.3,233.18],[162.8,233.18],[162.8,243.68],[110.3,243.68]]},{"text":"，","box":[[162.8,233.18],[173.3,233.18],[173.3,243.68],[162.8,243.68]]},{"text":"他让我写下来","box":[[171.02,233.18],[234.02,233.18],[234.02,243.68],[171.02,243.68]]},{"text":"，","box":[[234.02,233.18],[244.52,233.18],[244.52,243.68],[234.02,243.68]]},{"text":"我说就两句有什么好写的呢？","box":[[242.24,233.18],[378.74,233.18],[378.74,243.68],[242.24,243.68]]},{"text":"就没写。","box":[[70.56,250.16000000000003],[112.56,250.16000000000003],[112.56,260.66],[70.56,260.66]]},{"text":"晚上和几个同学说起这件事","box":[[109.16,250.16000000000003],[235.16,250.16000000000003],[235.16,260.66],[109.16,260.66]]},{"text":"，","box":[[235.16,250.16000000000003],[245.66,250.16000000000003],[245.66,260.66],[235.16,260.66]]},{"text":"她们也说就这两句话有什么好","box":[[242.24,250.16000000000003],[378.74,250.16000000000003],[378.74,260.66],[242.24,260.66]]},{"text":"写的呢？可是没想到","box":[[70.56,267.2],[165.06,267.2],[165.06,277.7],[70.56,277.7]]},{"text":"，","box":[[165.08,267.2],[175.58,267.2],[175.58,277.7],[165.08,277.7]]},{"text":"8","box":[[175.58,267.2],[180.83,267.2],[180.83,277.7],[175.58,277.7]]},{"text":"","box":[[180.83,267.2],[183.8,267.2],[183.8,267.2],[180.83,267.2]]},{"text":"月","box":[[183.8,267.2],[194.3,267.2],[194.3,277.7],[183.8,277.7]]},{"text":"","box":[[194.3,267.2],[197.24,267.2],[197.24,267.2],[194.3,267.2]]},{"text":"20","box":[[197.24,267.2],[207.77,267.2],[207.77,277.7],[197.24,277.7]]},{"text":"","box":[[207.77,267.2],[210.74,267.2],[210.74,267.2],[207.77,267.2]]},{"text":"日《光明日报》发表了一篇文章","box":[[210.74,267.2],[357.74,267.2],[357.74,277.7],[210.74,277.7]]},{"text":"，","box":[[357.76,267.2],[368.26,267.2],[368.26,277.7],[357.76,277.7]]},{"text":"题","box":[[368.26,267.2],[378.76,267.2],[378.76,277.7],[368.26,277.7]]},{"text":"目是“我给毛主席戴上红袖章”","box":[[70.56,284.24],[217.0245,284.24],[217.0245,294.74],[70.56,294.74]]},{"text":"，","box":[[211.82,284.24],[222.32,284.24],[222.32,294.74],[211.82,294.74]]},{"text":"署名宋要武括弧宋彬彬。我看到那","box":[[221.78,284.24],[378.7445,284.24],[378.7445,294.74],[221.78,294.74]]},{"text":"篇文章很吃惊很憋气","box":[[70.56,301.22],[165.06,301.22],[165.06,311.72],[70.56,311.72]]},{"text":"，","box":[[165.08,301.22],[175.58,301.22],[175.58,311.72],[165.08,311.72]]},{"text":"跟同","box":[[172.16,301.22],[193.16,301.22],[193.16,311.72],[172.16,311.72]]},{"text":"学说：","box":[[193.16,301.22],[224.66,301.22],[224.66,311.72],[193.16,311.72]]},{"text":"“宋要武这个名字我根本就不会用","box":[[216.0185,301.22],[373.45550000000003,301.22],[373.45550000000003,311.72],[216.0185,311.72]]},{"text":"，","box":[[373.48,301.22],[383.98,301.22],[383.98,311.72],[373.48,311.72]]},{"text":"现在连宋彬彬这个名字也不能用了。","box":[[70.56,318.26],[238.56,318.26],[238.56,328.76],[70.56,328.76]]},{"text":"”毛主席和我的简单对话","box":[[233.2785,318.26],[348.0015,318.26],[348.0015,328.76],[233.2785,328.76]]},{"text":"，","box":[[348.04,318.26],[358.54,318.26],[358.54,328.76],[348.04,328.76]]},{"text":"我们","box":[[357.76,318.26],[378.76,318.26],[378.76,328.76],[357.76,328.76]]},{"text":"班同学没人认为那是毛要我改名","box":[[70.56,335.3],[219.05099999999996,335.3],[219.05099999999996,345.8],[70.56,345.8]]},{"text":"，","box":[[219.38,335.3],[229.88,335.3],[229.88,345.8],[219.38,345.8]]},{"text":"这么多年来没有一个同学喊过我","box":[[230.06,335.3],[378.55100000000016,335.3],[378.55100000000016,345.8],[230.06,345.8]]},{"text":"“宋要武”","box":[[70.56,352.28],[123.06,352.28],[123.06,362.78],[70.56,362.78]]},{"text":"。","box":[[117.8415,352.28],[128.3415,352.28],[128.3415,362.78],[117.8415,362.78]]},{"text":"冯敬兰：","box":[[91.7,369.32],[133.88,369.32],[133.88,379.82],[91.7,379.82]]},{"text":"《光明日报》那篇署名文章，","box":[[128.66,369.32],[265.097,369.32],[265.097,379.82],[128.66,379.82]]},{"text":"8","box":[[265.12,369.32],[270.37,369.32],[270.37,379.82],[265.12,379.82]]},{"text":"","box":[[270.37,369.32],[273.04,369.32],[273.04,369.32],[270.37,369.32]]},{"text":"月","box":[[273.04,369.32],[283.54,369.32],[283.54,379.82],[273.04,379.82]]},{"text":"","box":[[283.54,369.32],[286.12,369.32],[286.12,369.32],[283.54,369.32]]},{"text":"21","box":[[286.12,369.32],[296.65,369.32],[296.65,379.82],[286.12,379.82]]},{"text":"","box":[[296.65,369.32],[299.32,369.32],[299.32,369.32],[296.65,369.32]]},{"text":"日由《人民日报》","box":[[299.32,369.32],[383.257,369.32],[383.257,379.82],[299.32,379.82]]},{"text":"转载，","box":[[70.56,386.38],[102.06,386.38],[102.06,396.88],[70.56,396.88]]},{"text":"再配上那幅照片，","box":[[99.78150000000001,386.38],[183.7815,386.38],[183.7815,396.88],[99.78150000000001,396.88]]},{"text":"你是一夜成名啊。","box":[[181.503,386.38],[265.503,386.38],[265.503,396.88],[181.503,396.88]]},{"text":"那篇文章确实不是你写的","box":[[263.2245,386.38],[378.7245,386.38],[378.7245,396.88],[263.2245,396.88]]},{"text":"吗？","box":[[70.56,403.36],[91.56,403.36],[91.56,413.86],[70.56,413.86]]},{"text":"宋彬彬：","box":[[91.7,420.4],[133.805,420.4],[133.805,430.9],[91.7,430.9]]},{"text":"四十多年来我真是有口难辩。","box":[[130.34,420.4],[266.77700000000004,420.4],[266.77700000000004,430.9],[130.34,430.9]]},{"text":"熟悉我的同学们都清楚不","box":[[263.23850000000004,420.4],[378.73850000000004,420.4],[378.73850000000004,430.9],[263.23850000000004,430.9]]},{"text":"但当年我写不出那样的文章","box":[[70.56,437.44],[197.84099999999998,437.44],[197.84099999999998,447.94],[70.56,447.94]]},{"text":"，","box":[[198.14,437.44],[208.64,437.44],[208.64,447.94],[198.14,447.94]]},{"text":"即使现在我也写不出来。我喜欢理工","box":[[208.76,437.44],[378.5240000000001,437.44],[378.5240000000001,447.94],[208.76,447.94]]},{"text":"科","box":[[70.56,454.48],[81.06,454.48],[81.06,464.98],[70.56,464.98]]},{"text":"，","box":[[81.18,454.48],[91.68,454.48],[91.68,464.98],[81.18,464.98]]},{"text":"一直从事的也是科研工作","box":[[91.82,454.48],[208.49599999999995,454.48],[208.49599999999995,464.98],[91.82,464.98]]},{"text":"，","box":[[208.76,454.48],[219.26,454.48],[219.26,464.98],[208.76,464.98]]},{"text":"写文章不是我的特长","box":[[219.38,454.48],[314.84600000000006,454.48],[314.84600000000006,464.98],[219.38,464.98]]},{"text":"，","box":[[315.1,454.48],[325.6,454.48],[325.6,464.98],[315.1,464.98]]},{"text":"那种措辞激","box":[[325.72,454.48],[378.7030000000001,454.48],[378.7030000000001,464.98],[325.72,464.98]]},{"text":"烈","box":[[70.56,471.46000000000004],[81.06,471.46000000000004],[81.06,481.96000000000004],[70.56,481.96000000000004]]},{"text":"、","box":[[81.06,471.46000000000004],[91.56,471.46000000000004],[91.56,481.96000000000004],[81.06,481.96000000000004]]},{"text":"政治性很强的文字","box":[[91.58,471.46000000000004],[175.57999999999998,471.46000000000004],[175.57999999999998,481.96000000000004],[91.58,481.96000000000004]]},{"text":"，","box":[[175.58,471.46000000000004],[186.08,471.46000000000004],[186.08,481.96000000000004],[175.58,481.96000000000004]]},{"text":"我更写不来。","box":[[186.08,471.46000000000004],[249.08,471.46000000000004],[249.08,481.96000000000004],[186.08,481.96000000000004]]},{"text":"冯敬兰：","box":[[91.7,488.5],[133.88,488.5],[133.88,499],[91.7,499]]},{"text":"我仔细读过那篇文章，","box":[[131.54,488.5],[236.477,488.5],[236.477,499],[131.54,499]]},{"text":"觉得它的导向性非常明确，","box":[[234.1355,488.5],[360.0725,488.5],[360.0725,499],[234.1355,499]]},{"text":"重点","box":[[357.731,488.5],[378.731,488.5],[378.731,499],[357.731,499]]},{"text":"在阐释“要武”的含义，读起来像是宣言和号召。如果依据这篇文章","box":[[70.56,505.53999999999996],[378.64050000000003,505.53999999999996],[378.64050000000003,516.04],[70.56,516.04]]},{"text":"把“宋要武”看作是武斗和暴力的符号，是不足为怪的。","box":[[70.56,522.52],[333.06,522.52],[333.06,533.02],[70.56,533.02]]},{"text":"宋彬彬：","box":[[91.7,539.56],[133.88,539.56],[133.88,550.06],[91.7,550.06]]},{"text":"我能够理解。","box":[[131.48,539.56],[194.417,539.56],[194.417,550.06],[131.48,550.06]]},{"text":"“要武”","box":[[186.74,539.56],[228.74,539.56],[228.74,550.06],[186.74,550.06]]},{"text":"使红卫兵的暴力合法化了，","box":[[226.28300000000002,539.56],[352.283,539.56],[352.283,550.06],[226.28300000000002,550.06]]},{"text":"818","box":[[349.84,539.56],[365.6499999999999,539.56],[365.6499999999999,550.06],[349.84,550.06]]},{"text":"","box":[[365.6499999999999,539.56],[368.32,539.56],[368.32,539.56],[365.6499999999999,539.56]]},{"text":"以","box":[[368.32,539.56],[378.82,539.56],[378.82,550.06],[368.32,550.06]]},{"text":"后在北京市迅速扩散开的","box":[[70.56,556.6],[186.06,556.6],[186.06,567.1],[70.56,567.1]]},{"text":"“破四旧”","box":[[183.7815,556.6],[236.2815,556.6],[236.2815,567.1],[183.7815,567.1]]},{"text":"成为大规模的暴力活动，","box":[[234.003,556.6],[349.503,556.6],[349.503,567.1],[234.003,567.1]]},{"text":"许多无","box":[[347.2245,556.6],[378.7245,556.6],[378.7245,567.1],[347.2245,567.1]]},{"text":"辜百姓失去了生命，","box":[[70.56,573.58],[165.06,573.58],[165.06,584.08],[70.56,584.08]]},{"text":"家破人亡的悲惨故事我也听说过不少。","box":[[161.637,573.58],[340.137,573.58],[340.137,584.08],[161.637,584.08]]},{"text":"这个符号","box":[[336.714,573.58],[378.714,573.58],[378.714,584.08],[336.714,584.08]]},{"text":"给予我的只是冤枉和委屈，而对于千百万同胞来说，却是生命的消","box":[[70.56,590.62],[378.3150000000001,590.62],[378.3150000000001,601.12],[70.56,601.12]]}]}