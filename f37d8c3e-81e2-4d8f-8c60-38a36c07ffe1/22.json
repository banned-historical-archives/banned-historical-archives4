277.7]]},{"text":"’","box":[[287.08,267.2],[297.58,267.2],[297.58,277.7],[287.08,277.7]]},{"text":"。我不能说","box":[[297.58,267.2],[348.337,267.2],[348.337,277.7],[297.58,277.7]]},{"text":"这人","box":[[348.34,267.2],[369.34,267.2],[369.34,277.7],[348.34,277.7]]},{"text":"是谁，因为他后来也很遭罪。","box":[[61.2,284.24],[197.7,284.24],[197.7,294.74],[61.2,294.74]]},{"text":"”","box":[[197.72,284.24],[208.22,284.24],[208.22,294.74],[197.72,294.74]]},{"text":"7","box":[[208.22,280.22],[211.73,280.22],[211.73,287.24],[208.22,287.24]]},{"text":"“反右补课”","box":[[82.2,301.22],[145.2,301.22],[145.2,311.72],[82.2,311.72]]},{"text":"是陆平非做不可的事情，","box":[[141.777,301.22],[257.277,301.22],[257.277,311.72],[141.777,311.72]]},{"text":"后来做到党委书记的王学","box":[[253.85399999999998,301.22],[369.354,301.22],[369.354,311.72],[253.85399999999998,311.72]]},{"text":"珍说","box":[[61.2,318.26],[82.2,318.26],[82.2,328.76],[61.2,328.76]]},{"text":"：","box":[[82.2,318.26],[92.7,318.26],[92.7,328.76],[82.2,328.76]]},{"text":"“当时北大党委被认为在反右斗争中","box":[[87.92,318.26],[255.85700000000003,318.26],[255.85700000000003,328.76],[87.92,328.76]]},{"text":"‘右’","box":[[253.4525,318.26],[284.9525,318.26],[284.9525,328.76],[253.4525,328.76]]},{"text":"了。","box":[[282.4955,318.26],[303.4955,318.26],[303.4955,328.76],[282.4955,328.76]]},{"text":"在反","box":[[301.091,318.26],[322.091,318.26],[322.091,328.76],[301.091,328.76]]},{"text":"右补课中","box":[[322.12,318.26],[364.12,318.26],[364.12,328.76],[322.12,328.76]]},{"text":"，","box":[[364.12,318.26],[374.62,318.26],[374.62,328.76],[364.12,328.76]]},{"text":"陆平同志作为新任的党委第一书记，自然要积极贯彻领导上的指示，","box":[[61.2,335.3],[374.583,335.3],[374.583,345.8],[61.2,345.8]]},{"text":"使北大党委不再继续被认为‘右’了。”","box":[[61.2,352.28],[247.14450000000005,352.28],[247.14450000000005,362.78],[61.2,362.78]]},{"text":"8","box":[[246.14,348.26],[249.64999999999998,348.26],[249.64999999999998,355.28],[246.14,355.28]]},{"text":"","box":[[249.64999999999998,348.26],[254.98,348.26],[254.98,348.26],[249.64999999999998,348.26]]},{"text":"在上级的压力下，陆平加","box":[[254.98,352.28],[369.3985,352.28],[369.3985,362.78],[254.98,362.78]]},{"text":"大力度","box":[[61.2,369.32],[92.7,369.32],[92.7,379.82],[61.2,379.82]]},{"text":"进行“反右补课”","box":[[92.72,369.32],[176.1845,369.32],[176.1845,379.82],[92.72,379.82]]},{"text":"，又多划了右派分子","box":[[170.966,369.32],[264.9305,369.32],[264.9305,379.82],[170.966,379.82]]},{"text":"","box":[[264.9305,369.32],[267.58,369.32],[267.58,369.32],[264.9305,369.32]]},{"text":"205","box":[[267.58,369.32],[283.33,369.32],[283.33,379.82],[267.58,379.82]]},{"text":"","box":[[283.33,369.32],[286,369.32],[286,369.32],[283.33,369.32]]},{"text":"人，比江隆基主政","box":[[286,369.32],[369.4015,369.32],[369.4015,379.82],[286,379.82]]},{"text":"时期增加了","box":[[61.2,386.38],[113.7,386.38],[113.7,396.88],[61.2,396.88]]},{"text":"","box":[[113.7,386.38],[116.36,386.38],[116.36,386.38],[113.7,386.38]]},{"text":"40%","box":[[116.36,386.38],[132.11,386.38],[132.11,396.88],[116.36,396.88]]},{"text":"左右。","box":[[132.14,386.38],[163.64,386.38],[163.64,396.88],[132.14,396.88]]},{"text":"9","box":[[162.32,382.34],[165.82999999999998,382.34],[165.82999999999998,389.35999999999996],[162.32,389.35999999999996]]},{"text":"","box":[[165.82999999999998,382.34],[171.14,382.34],[171.14,382.34],[165.82999999999998,382.34]]},{"text":"江隆基","box":[[171.14,386.38],[202.64,386.38],[202.64,396.88],[171.14,396.88]]},{"text":"","box":[[202.64,386.38],[205.28,386.38],[205.28,386.38],[202.64,386.38]]},{"text":"1958","box":[[205.28,386.38],[226.28,386.38],[226.28,396.88],[205.28,396.88]]},{"text":"","box":[[226.28,386.38],[228.92,386.38],[228.92,386.38],[226.28,386.38]]},{"text":"年","box":[[228.92,386.38],[239.42,386.38],[239.42,396.88],[228.92,396.88]]},{"text":"","box":[[239.42,386.38],[242,386.38],[242,386.38],[239.42,386.38]]},{"text":"10","box":[[242,386.38],[252.53,386.38],[252.53,396.88],[242,396.88]]},{"text":"","box":[[252.53,386.38],[255.22,386.38],[255.22,386.38],[252.53,386.38]]},{"text":"月被调离北大，出任兰州","box":[[255.22