00000004],[285.4,107.46000000000004]]},{"text":"","box":[[295.9,96.96000000000004],[298.54,96.96000000000004],[298.54,96.96000000000004],[295.9,96.96000000000004]]},{"text":"2","box":[[298.54,96.96000000000004],[303.79,96.96000000000004],[303.79,107.46000000000004],[298.54,107.46000000000004]]},{"text":"","box":[[303.79,96.96000000000004],[306.46,96.96000000000004],[306.46,96.96000000000004],[303.79,96.96000000000004]]},{"text":"日发表的社论","box":[[306.46,96.96000000000004],[369.397,96.96000000000004],[369.397,107.46000000000004],[306.46,107.46000000000004]]},{"text":"《革命的“三结合”是夺权斗争胜利的保证》","box":[[61.2,114],[267.35699999999997,114],[267.35699999999997,124.5],[61.2,124.5]]},{"text":"，以及《人民日报》","box":[[262.13849999999996,114],[352.7955,114],[352.7955,124.5],[262.13849999999996,124.5]]},{"text":"3","box":[[350.98,114],[356.23,114],[356.23,124.5],[350.98,124.5]]},{"text":"","box":[[356.23,114],[358.9,114],[358.9,114],[356.23,114]]},{"text":"月","box":[[358.9,114],[369.4,114],[369.4,124.5],[358.9,124.5]]},{"text":"10","box":[[61.2,131],[71.73,131],[71.73,141.5],[61.2,141.5]]},{"text":"","box":[[71.73,131],[75.42,131],[75.42,131],[71.73,131]]},{"text":"日提前发表的《红旗》第五期社论《论革命的“三结合”","box":[[75.42,131],[337.857,131],[337.857,141.5],[75.42,141.5]]},{"text":"》","box":[[332.5755,131],[343.0755,131],[343.0755,141.5],[332.5755,141.5]]},{"text":"，都强","box":[[337.85699999999997,131],[369.35699999999997,131],[369.35699999999997,141.5],[337.85699999999997,141.5]]},{"text":"调了“革命干部代表”的重要性。但是，这同毛泽东在生日宴上“全","box":[[61.2,148.03999999999996],[369.32250000000005,148.03999999999996],[369.32250000000005,158.53999999999996],[61.2,158.53999999999996]]},{"text":"国全面内战”的祝酒词和《红旗》元旦社论“全国全面阶级斗争”的","box":[[61.2,165.07999999999998],[369.32250000000005,165.07999999999998],[369.32250000000005,175.57999999999998],[61.2,175.57999999999998]]},{"text":"号召是不相协调的。","box":[[61.2,182.06],[155.7,182.06],[155.7,192.56],[61.2,192.56]]},{"text":"另外，","box":[[82.2,199.10000000000002],[113.7,199.10000000000002],[113.7,209.60000000000002],[82.2,209.60000000000002]]},{"text":"中央文革，","box":[[111.2955,199.10000000000002],[163.7955,199.10000000000002],[163.7955,209.60000000000002],[111.2955,209.60000000000002]]},{"text":"特别是王","box":[[161.391,199.10000000000002],[203.391,199.10000000000002],[203.391,209.60000000000002],[161.391,209.60000000000002]]},{"text":"、","box":[[203.42,199.10000000000002],[213.92,199.10000000000002],[213.92,209.60000000000002],[203.42,209.60000000000002]]},{"text":"关","box":[[211.52,199.10000000000002],[222.02,199.10000000000002],[222.02,209.60000000000002],[211.52,209.60000000000002]]},{"text":"、","box":[[222.02,199.10000000000002],[232.52,199.10000000000002],[232.52,209.60000000000002],[222.02,209.60000000000002]]},{"text":"戚一伙，","box":[[230.12,199.10000000000002],[272.057,199.10000000000002],[272.057,209.60000000000002],[230.12,209.60000000000002]]},{"text":"完全是说一套做一","box":[[269.65250000000003,199.10000000000002],[353.65250000000003,199.10000000000002],[353.65250000000003,209.60000000000002],[269.65250000000003,209.60000000000002]]},{"text":"套。","box":[[353.68,199.10000000000002],[374.68,199.10000000000002],[374.68,209.60000000000002],[353.68,209.60000000000002]]},{"text":"他们通过暗箱操作掀起的“反二月逆流”浪潮，同“解放干部”完全","box":[[61.2,216.14],[369.32250000000005,216.14],[369.32250000000005,226.64],[61.2,226.64]]},{"text":"背道而驰。","box":[[61.2,233.18],[113.7,233.18],[113.7,243.68],[61.2,243.68]]},{"text":"他们要打倒几位管经济","box":[[111.42150000000001,233.18],[216.4215,233.18],[216.4215,243.68],[111.42150000000001,243.68]]},{"text":"、","box":[[216.44,233.18],[226.94,233.18],[226.94,243.68],[216.44,243.68]]},{"text":"外交的副总理","box":[[224.66,233.18],[287.65999999999997,233.18],[287.65999999999997,243.68],[224.66,243.68]]},{"text":"（以及大量支持他","box":[[285.38149999999996,233.18],[369.38149999999996,233.18],[369.38149999999996,243.68],[285.38149999999996,243.68]]},{"text":"们的中下层干部）","box":[[61.2,250.16000000000003],[145.2,250.16000000000003],[145.2,260.66],[61.2,260.66]]},{"text":"，把矛头指向周恩来，企图夺取国务院和各部的实","box":[[139.98149999999998,250.16000000000003],[369.3645,250.16000000000003],[369.3645,260.66],[139.98149999999998,260.66]]},{"text":"际权力。他们结党营私，企图把他们的同伙，甚至历史上有问题的","box":[[61.2,267.2],[368.9550000000001,267.2],[368.9550000000001,277.7],[61.2,277.7]]},{"text":"人，拉入权力机构，以便于他们操控。他们还把“反二月逆流”推向","box":[[61.2,284.24],[369.32250000000005,284.24],[369.32250000000005,294.74],[61.2,294.74]]},{"text":"全国，在这样的形势下，群众组织更加分裂，甚至发生大规模武斗，","box":[[61.2,301.22],[374.59349999999995,301.22],[374.59349999999995,311.72],[61.2,311.72]]},{"text":"真正意义上的“解放干部”","box":[[61.2,318.26],[187.2,318.26],[187.2,328.76],[61.2,328.76]]},{"text":"，根本无从谈起。","box":[[181.98149999999998,318.26],[265.9185,318.26],[265.9185,328.76],[181.98149999999998,328.76]]},{"text":"北大“解放干部”的工作做得不好，原因是多方面的。首先是聂","box":[[82.2,335.3],[369.2805,335.3],[369.2805,345.8],[82.2,345.8]]},{"text":"元梓本人对这件事没有足够的重视，聂后来回忆说","box":[[61.2,352.28],[292.2,352.28],[292.2,362.78],[61.2,362.78]]},{"text":"：","box":[[292.24,352.28],[302.74,352.28],[302.74,362.78],[292.24,362.78]]},{"text":"（","box":[[82.2,375.32],[92.7,375.32],[92.7,385.82],[82.2,385.82]]},{"text":"1","box":[[92.72,375.32],[97.97,375.32],[97.97,385.82],[92.72,385.82]]},{"text":"967","box":[[98,375.32],[113.75,375.32],[113.75,385.82],[98,385.82]]},{"text":"","box":[[113.75,375.32],[117.44,375.32],[117.44,375.32],[113.75,375.32]]},{"text":"年）《红旗》杂志第四期社论“必须正确对待干部”发","box":[[117.44,375.32],[369.377,375.32],[369.377,385.82],[117.44,385.82]]},{"text":"表后，","box":[[61.2,392.38],[92.7,392.38],[92.7,402.88],[61.2,402.88]]},{"text":"我反应迟钝。","box":[[90.42150000000001,392.38],[153.4215,392.38],[153.4215,402.88],[90.42150000000001,402.88]]},{"text":"孙蓬一当时曾提出大批解放干部的观点，","box":[[151.143,392.38],[340.14300000000003,392.38],[340.14300000000003,402.88],[151.143,402.88]]},{"text":"没有得","box":[[337.8645,392.38],[369.3645,392.38],[369.3645,402.88],[337.8645,402.88]]},{"text":"到我和大多数常委的支持。","box":[[61.2,409.36],[187.2,409.36],[187.2,419.86],[61.2,419.86]]},{"text":"我身边的一些同志，","box":[[183.777,409.36],[278.277,409.36],[278.277,419.86],[183.777,419.86]]},{"text":"曾建议我要注意团结","box":[[274.854,409.36],[369.354,409.36],[369.354,419.86],[274.854,419.86]]},{"text":"不同意见的人，尤其像老干部戈华","box":[[61.2,426.4],[216.957,426.4],[216.957,436.9],[61.2,436.9]]},{"text":"、","box":[[216.98,426.4],[227.48,426.4],[227.48,436.9],[216.98,436.9]]},{"text":"戴新民","box":[[225.74,426.4],[257.24,426.4],[257.24,436.9],[225.74,436.9]]},{"text":"、","box":[[257.26,426.4],[267.76,426.4],[267.76,436.9],[257.26,436.9]]},{"text":"张侠等，他们都是社教","box":[[266.02,426.4],[369.3295,426.4],[369.3295,436.9],[266.02,436.9]]},{"text":"时期的左派，","box":[[61.2,443.44],[124.2,443.44],[124.2,453.94],[61.2,453.94]]},{"text":"是很有经验的老干部。","box":[[121.92150000000001,443.44],[226.9215,443.44],[226.9215,453.94],[121.92150000000001,453.94]]},{"text":"我当时头脑发热，","box":[[224.643,443.44],[308.64300000000003,443.44],[308.64300000000003,453.94],[224.643,453.94]]},{"text":"没能听取这些","box":[[306.3645,443.44],[369.3645,443.44],[369.3645,453.94],[306.3645,453.94]]},{"text":"善意的建议，","box":[[61.2,460.48],[124.2,460.48],[124.2,470.98],[61.2,470.98]]},{"text":"这对后来校内的分裂造成了一定影响。","box":[[121.92150000000001,460.48],[300.42150000000004,460.48],[300.42150000000004,470.98],[121.92150000000001,470.98]]},{"text":"现在想起来，","box":[[298.14300000000003,460.48],[361.14300000000003,460.48],[361.14300000000003,470.98],[298.14300000000003,470.98]]},{"text":"我","box":[[358.8645,460.48],[369.3645,460.48],[369.3645,470.98],[358.8645,470.98]]},{"text":"感到十分懊恼。","box":[[61.2,477.46000000000004],[134.7,477.46000000000004],[134.7,487.96000000000004],[61.2,487.96000000000004]]},{"text":"68","box":[[134.72,471.94],[140.24,471.94],[140.24,477.46],[134.72,477.46]]},{"text":"孙蓬一曾经提出","box":[[82.2,500.5],[155.7,500.5],[155.7,511],[82.2,511]]},{"text":"：","box":[[155.72,500.5],[166.22,500.5],[166.22,511],[155.72,511]]},{"text":"北大除了报纸上点名的人（指陆平","box":[[165.68,500.5],[322.6445,500.5],[322.6445,511],[165.68,511]]},{"text":"、","box":[[322.66,500.5],[333.16,500.5],[333.16,511],[322.66,511]]},{"text":"彭珮云）","box":[[332.62,500.5],[374.62,500.5],[374.62,511],[332.62,511]]},{"text":"之外，其他干部都可以“解放”","box":[[61.2,517.54],[207.12899999999996,517.54],[207.12899999999996,528.04],[61.2,528.04]]},{"text":"。笔者不了解孙蓬一说这番话的时间","box":[[201.91049999999998,517.54],[369.375,517.54],[369.375,528.04],[201.91049999999998,528.04]]},{"text":"和场合，而据《新北大报》的一篇文章，这是孙蓬一在干部座谈会上","box":[[61.2,534.52],[369.291,534.52],[369.291,545.02],[61.2,545.02]]},{"text":"说的。","box":[[61.2,551.56],[92.7,551.56],[92.7,562.06],[61.2,562.06]]},{"text":"这是一个难能可贵的大胆的提议。","box":[[90.42150000000001,551.56],[247.9215,551.56],[247.9215,562.06],[90.42150000000001,562.06]]},{"text":"但是，","box":[[245.643,551.56],[277.14300000000003,551.56],[277.14300000000003,562.06],[245.643,562.06]]},{"text":"孙蓬一的观点没有得","box":[[274.8645,551.56],[369.3645,551.56],[369.3645,562.06],[274.8645,562.06]]},{"text":"68","box":[[61.2,583.36],[70.2,583.36],[70.2,592.36],[61.2,592.36]]},{"text":"","box":[[70.2,583.36],[74.7,583.36],[74.7,583.36],[70.2,583.36]]},{"text":"聂元梓","box":[[74.7,583.36],[101.70000000000002,583.36],[101.70000000000002,592.36],[74.7,592.36]]},{"text":"：","box":[[101.72,583.36],[110.72,583.36],[110.72,592.36],[101.72,592.36]]},{"text":"《我在文革漩涡中》，香港","box":[[107.72,583.36],[212.65100000000004,583.36],[212.65100000000004,592.36],[107.72,592.36]]},{"text":"：","box":[[212.66,583.36],[221.66,583.36],[221.66,592.36],[212.66,592.36]]},{"text":"中国文革历史出版社，","box":[[220.16,583.36],[310.09700000000004,583.36],[310.09700000000004,592.36],[220.16,592.36]]},{"text":"2017","box":[[308.62,583.36],[326.62,583.36],[326.62,592.36],[308.62,592.36]]},{"text":"","box":[[326.62,583.36],[328.84,583.36],[328.84,583.36],[326.62,583.36]]},{"text":"年","box":[[328.84,583.36],[337.84,583.36],[337.84,592.36],[328.84,592.36]]},{"text":"","box":[[337.84,583.36],[340.06,583.36],[340.06,583.36],[337.84,583.36]]},{"text":"10","box":[[340.06,583.36],[349.06,583.36],[349.06,592.36],[340.06,592.36]]},{"text":"","box":[[349.06,583.36],[351.34,583.36],[351.34,583.36],[349.06,583.36]]},{"text":"月，","box":[[351.34,583.36],[369.34,583.36],[369.34,592.36],[351.34,592.36]]},{"text":"第","box":[[74.7,595.06],[83.7,595.06],[83.7,604.06],[74.7,604.06]]},{"text":"","box":[[83.7,595.06],[85.94,595.06],[85.94,595.06],[83.7,595.06]]},{"text":"121","box":[[85.94,595.06],[99.44,595.06],[99.44,604.06],[85.94,604.06]]},{"text":"","box":[[99.44,595.06],[101.66,595.06],[101.66,595.06],[99.44,595.06]]},{"text":"页。","box":[[101.66,595.06],[119.66,595.06],[119.66,604.06],[101.66,604.06]]}]}