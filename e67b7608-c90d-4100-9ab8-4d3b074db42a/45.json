14.5278]]},{"text":"，","box":[[360.4979000000001,504.52779999999996],[370.4979000000001,504.52779999999996],[370.4979000000001,514.5278],[360.4979000000001,514.5278]]},{"text":"每段语录前都有编号。","box":[[55.496899999999975,522.0278],[155.49689999999998,522.0278],[155.49689999999998,532.0278],[55.496899999999975,532.0278]]},{"text":"由","box":[[76.75689999999997,539.5278],[86.75689999999997,539.5278],[86.75689999999997,549.5278],[76.75689999999997,549.5278]]},{"text":"《解放军报》","box":[[84.25689999999997,539.5278],[144.25689999999997,539.5278],[144.25689999999997,549.5278],[84.25689999999997,549.5278]]},{"text":"编辑出版的、","box":[[141.75689999999997,539.5278],[201.75689999999997,539.5278],[201.75689999999997,549.5278],[141.75689999999997,549.5278]]},{"text":"成为文化大革命象征的","box":[[197.99689999999998,539.5278],[297.9969,539.5278],[297.9969,549.5278],[197.99689999999998,549.5278]]},{"text":"《毛主席语录》","box":[[295.4969,539.5278],[365.4969,539.5278],[365.4969,549.5278],[295.4969,549.5278]]},{"text":"，","box":[[360.4969,539.5278],[370.4969,539.5278],[370.4969,549.5278],[360.4969,549.5278]]},{"text":"反映了军队在当年的作用和地位。林彪在","box":[[55.496899999999975,557.0278],[237.41690000000006,557.0278],[237.41690000000006,567.0278],[55.496899999999975,567.0278]]},{"text":"","box":[[237.41690000000006,557.0278],[237.67290000000006,557.0278],[237.67290000000006,557.0278],[237.41690000000006,557.0278]]},{"text":"1967","box":[[239.9769,556.6278],[259.9769,556.6278],[259.9769,566.6278],[239.9769,566.6278]]},{"text":"","box":[[259.9769,556.6278],[260.2299,556.6278],[260.2299,556.6278],[259.9769,556.6278]]},{"text":"年","box":[[262.5069,557.0278],[272.5069,557.0278],[272.5069,567.0278],[262.5069,567.0278]]},{"text":"","box":[[272.5069,557.0278],[272.75989999999996,557.0278],[272.75989999999996,557.0278],[272.5069,557.0278]]},{"text":"8","box":[[275.03689999999995,556.6278],[280.03689999999995,556.6278],[280.03689999999995,566.6278],[275.03689999999995,566.6278]]},{"text":"","box":[[280.03689999999995,556.6278],[280.