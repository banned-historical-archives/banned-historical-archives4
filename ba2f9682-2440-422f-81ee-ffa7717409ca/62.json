423.44862577600003],[293.2983544916004,423.44862577600003],[293.2983544916004,433.15212977600004],[110.19324371510449,433.15212977600004]]},{"text":"海瑞集》","box":[[289.8051221621125,423.44862577600003],[330.5598389621125,423.44862577600003],[330.5598389621125,433.15212977600004],[289.8051221621125,433.15212977600004]]},{"text":"，","box":[[326.77548210561656,423.44862577600003],[336.47898610561657,423.44862577600003],[336.47898610561657,433.15212977600004],[326.77548210561656,433.15212977600004]]},{"text":"因为这","box":[[332.1123996021126,423.44862577600003],[362.5814409761286,423.44862577600003],[362.5814409761286,433.15212977600004],[332.1123996021126,433.15212977600004]]},{"text":"本书将关于海瑞的基本资料都收进去了，","box":[[65.26602989860856,438.683127056],[244.87792775262446,438.683127056],[244.87792775262446,448.386631056],[65.26602989860856,448.386631056]]},{"text":"另外还有吴晗写的《","box":[[240.12323019963256,438.683127056],[329.97767723963244,438.683127056],[329.97767723963244,448.386631056],[240.12323019963256,448.386631056]]},{"text":"论海瑞》","box":[[326.38739046313657,438.683127056],[366.6569029526246,438.683127056],[366.6569029526246,448.386631056],[326.38739046313657,448.386631056]]},{"text":"的文章。接着，","box":[[65.26607841612855,453.91764774300805],[134.8402117996326,453.91764774300805],[134.8402117996326,463.62115174300806],[65.26607841612855,463.62115174300806]]},{"text":"朱永嘉又将从图书馆借出《","box":[[130.08548513612857,453.91764774300805],[251.96149537612845,453.91764774300805],[251.96149537612845,463.62115174300806],[130.08548513612857,463.62115174300806]]},{"text":"明史》","box":[[248.3711891926246,453.91764774300805],[278.6461216726246,453.91764774300805],[278.6461216726246,463.62115174300806],[248.3711891926246,463.62115174300806]]},{"text":"、","box":[[274.86178422313657,453.91764774300805],[284.5652882231366,453.91764774300805],[284.5652882231366,463.62115174300806],[274.86178422313657,463.62115174300806]]},{"text":"地方志和自己笔记","box":[[280.19868231262456,453.91764774300805],[362.5815283076645,453.91764774300805],[362.5815283076645,463.62115174300806],[280.19868231262456,463.62115174300806]]},{"text":"中的相关资料交给姚文元。","box":[[65.26608811963251,469.152149023008],[184.91031184664052,469.152149023008],[184.91031184664052,478.855653023008],[65.26608811963251,478.855653023008]]},{"text":"姚文元不是搞历史的，","box":[[85.25532576664054,484.483665936],[185.58957653364857,484.483665936],[185.58957653364857,494.18716993600003],[85.25532576664054,494.18716993600003]]},{"text":"在看了这些材料后，","box":[[181.22302884416058,484.483665936],[273.60041603467255,484.483665936],[273.60041603467255,494.18716993600003],[181.22302884416058,494.18716993600003]]},{"text":"就要朱永嘉给他谈谈","box":[[269.2338295311686,484.483665936],[362.5815768251845,484.483665936],[362.5815768251845,494.18716993600003],[269.2338295311686,494.18716993600003]]},{"text":"如何看待海瑞这个人，","box":[[65.26616574766456,499.718186623008],[165.69745155467263,499.718186623008],[165.69745155467263,509.42169062300803],[65.26616574766456,509.42169062300803]]},{"text":"谈谈嘉靖隆庆年间的历史背景。于是，","box":[[161.33088445817663,499.718186623008],[336.1880556486886,499.718186623008],[336.1880556486886,509.42169062300803],[161.33088445817663,509.42169062300803]]},{"text":"朱永嘉","box":[[331.9185624062087,499.718186623008],[362.5816350462087,499.718186623008],[362.5816350462087,509.42169062300803],[331.9185624062087,509.42169062300803]]},{"text":"又给他讲了海瑞的主要生平，","box":[[65.26622396868868,514.952687903008],[197.9131139451847,514.952687903008],[197.9131139451847,524.656191903008],[65.26622396868868,524.656191903008]]},{"text":"当时的社会经济状况，","box":[[193.54652744168075,514.952687903008],[295.5303350746728,514.952687903008],[295.5303350746728,524.656191903008],[193.54652744168075,524.656191903008]]},{"text":"并讲了海瑞这个","box":[[291.16374857116887,514.952687903008],[362.5816059356969,514.952687903008],[362.5816059356969,524.656191903008],[291.16374857116887,524.656191903008]]},{"text":"人耿直，","box":[[65.26616574766496,530.187198886512],[104.95349710766499,530.187198886512],[104.95349710766499,539.8907028865119],[65.26616574766496,539.8907028865119]]},{"text":"敢讲话，","box":[[100.19878985116898,530.187198886512],[139.88612121116898,530.187198886512],[139.88612121116898,539.8907028865119],[100.19878985116898,539.8907028865119]]},{"text":"廉洁，","box":[[135.131413954673,530.187198886512],[165.018196571169,530.187198886512],[165.018196571169,539.8907028865119],[135.131413954673,539.8907028865119]]},{"text":"为老百姓做过几件事，","box":[[160.65162947467303,530.187198886512],[263.411746538177,530.187198886512],[263.411746538177,539.8907028865119],[160.65162947467303,539.8907028865119]]},{"text":"还谈了学术界对海瑞的","box":[[259.0451988486891,530.187198886512],[362.58166415672105,530.187198886512],[362.58166415672105,539.8907028865119],[259.0451988486891,539.8907028865119]]},{"text":"评价。","box":[[65.26622396868908,545.518735206512],[94.9589462086891,545.518735206512],[94.9589462086891,555.222239206512],[65.26622396868908,555.222239206512]]}]}